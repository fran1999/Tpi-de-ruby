<div align="center" style="margin-top: 5%">
    <div class="box column is-6">

        <h1 class="title is-3 is-spaced">Polycon</h1>
        <%= form_with(scope: :session, url: login_path) do |f| %>
            <% flash.each do |type, msg| %>
                <div class="column is-6">
                    <%= msg %>
                </div>
            <% end %>
            <div class="field column is-4">
                <%= f.label :username, class: "label" %>
                <%= f.text_field :username, class: "input" %>
            </div>

            <div class="field column is-4">
                <%= f.label :password, class: "label" %>
                <%= f.password_field :password, class: "input" %>
            </div>

            <div class="actions column is-4">
                <%= f.submit "Log in", class: "button is-danger is-fullwidth" %>
            </div>

        <% end %>
    <div>
</div>
